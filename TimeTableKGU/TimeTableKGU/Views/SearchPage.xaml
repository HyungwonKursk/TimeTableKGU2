<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTableKGU.Views.SearchPage">
    <ContentPage.Content>
        <StackLayout x:Name="stackLayout">
            <Label x:Name="header" Text="Выберите параметр поиска" FontSize="Large" TextColor="Black"/>
            <Picker x:Name="picker" SelectedIndexChanged="picker_SelectedIndexChanged" BackgroundColor="#4682B4">
                <Picker.Items>
                    <x:String>1. Поиск преподавателя по ФИО</x:String>
                    <x:String>2. Поиск свободной аудитории по времени</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>